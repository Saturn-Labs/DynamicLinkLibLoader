{
    "$id": "dynamic-linker-symbol-file",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "target": {
            "type": "string"
        },
        "default_version": {
            "type": "string",
            "value": { "pattern": "^(ignore|(\\d+|\\*)(\\.(\\d+|\\*)){0,3})$" }
        },
        "symbols": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "version": {
                        "type": "string",
                        "value": { "pattern": "^(ignore|(\\d+|\\*)(\\.(\\d+|\\*)){0,3})$" }
                    },
                    "architecture": {
                        "type": "string",
                        "enum": ["x64", "x86"]
                    },
                    "symbol": {
                        "type": "string"
                    },
                    "pointer": {
                        "type": "string",
                        "pattern": "^(0x[0-9a-fA-F]{1,16}|([0-9A-Fa-f]{2}|\\?)(( [0-9A-Fa-f]{2}| \\?))*)$"
                    }
                },
                "required": ["symbol", "pointer"]
            }
        }
    },
    "required": ["target", "symbols"]
}